<div class="section">
  <%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: {class: "input"}, label_html: {class: "label"}, wrapper: false %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: {class: "textarea"}, label_html: {class: "label"}, wrapper: false %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-primary" %>
  <% end %>
</div>
